{
   "steps": [{
      "name": "gcr.io/cloud-builders/docker",
      "args": [
         "build",
         "-t",
         "gcr.io/$PROJECT_ID/telegrambot-image-$_ENV:$COMMIT_SHA",
         "."
      ]
   },
   {
      "name": "gcr.io/cloud-builders/docker",
      "args": [
         "run",
         "--rm",
         "gcr.io/$PROJECT_ID/telegrambot-image-$_ENV:$COMMIT_SHA",
         "black",
         "--check",
         "."
      ]
   },
   {
      "name": "gcr.io/cloud-builders/docker",
      "args": [
         "run",
         "--rm",
         "-v",
         "/workspace:/app",
         "gcr.io/$PROJECT_ID/telegrambot-image-$_ENV:$COMMIT_SHA",
         "/app/config/ci/run_ci.sh",
         "."
      ]
   },
   {
      "name": "gcr.io/cloud-builders/docker",
      "args": ["push", "gcr.io/$PROJECT_ID/telegrambot-image-$_ENV"]
   },
   {
      "name": "gcr.io/cloud-builders/gcloud",
      "args": [
         "run",
         "deploy",
         "telegrambot$_SERVICE_NAME",
         "--image",
         "gcr.io/$PROJECT_ID/telegrambot-image-$_ENV:$COMMIT_SHA",
         "--region",
         "europe-west1",
         "--platform",
         "managed"
      ]
   }],
   "images": [
      "gcr.io/$PROJECT_ID/telegrambot-image-$_ENV:$COMMIT_SHA"
    ],
   "artifacts": {
      "objects": {
         "location": "gs://telegrambot",
         "paths": ["coverage.svg"]
      }
   }
}
